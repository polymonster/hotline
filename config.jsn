{
    tools<windows>: {
        // pmfx: "bin/win32/pmfx/build_pmfx.exe"
        pmfx: "../pmfx-shader/pmfx.py"
    }

    tools_help: {
        pmfx: {
            help_arg: "-help"
        }
    }
	
	tools_update: {
		pmfx: {
			tag_name: latest
			repository: "https://api.github.com/repos/polymonster/pmfx-shader/releases"
			asset_name<windows>: Windows-x64.zip
		}
	}

    win32: {
        copy: {
            files: [
                ["bin/win32/WinPixEventRuntime.dll", "target/debug/WinPixEventRuntime.dll"]
                ["bin/win32/WinPixEventRuntime.dll", "target/release/WinPixEventRuntime.dll"]
            ]
        }

        pmfx: {
            args: [
                "-shader_platform hlsl"
                "-shader_version 6_0"
                "-i examples/"
                "-o target/debug/data/shaders"
                "-t target/temp/shaders"
                "-source"
            ]
        }
    }
}