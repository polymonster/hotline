{
    tools<windows>: {
        pmfx: "hotline-data/bin/win32/pmfx/pmfx.exe"
        pmfx_dev: "../pmfx-shader/pmfx.py"
    }

    tools_help: {
        pmfx: {
            help_arg: "-help"
        }
    }
	
	tools_update: {
		pmfx: {
			tag_name: latest
			repository: "https://api.github.com/repos/polymonster/pmfx-shader/releases"
			asset_name<windows>: Windows-x64.zip
		}
	}

    base: {
        jsn_vars: {
            data_dir: "target/data"
            temp_dir: "target/temp"
        }

        copy_base: {
            type: copy
            files: [
                // copy fonts to data dir
                ["src/fonts", "${data_dir}/fonts"]

                // default imgui layouts form the client.. todo. move to target
                ["plugins/imgui.ini", "target/debug/imgui.ini"]
                ["plugins/imgui.ini", "target/release/imgui.ini"]

                // default user config for the client
                ["plugins/user_config.json", "target/user_config.json"]
            ]
        }
    }

    win32(base): {
        copy: {
            files: [
                // copies the win pix event run time for inserting pix events
                // multiple build output locations may need a copy
                ["hotline-data/bin/win32/WinPixEventRuntime.dll", "target/debug/WinPixEventRuntime.dll"]
                ["hotline-data/bin/win32/WinPixEventRuntime.dll", "target/release/WinPixEventRuntime.dll"]
                ["hotline-data/bin/win32/WinPixEventRuntime.dll", "target/debug/examples/WinPixEventRuntime.dll"]
                ["hotline-data/bin/win32/WinPixEventRuntime.dll", "target/release/examples/WinPixEventRuntime.dll"]
            ]
        }

        pmfx: {
            args: [
                "-shader_platform hlsl"
                "-shader_version 6_0"
                "-i src/shaders/"
                "-o ${data_dir}/shaders"
                "-t ${temp_dir}/shaders"
                "-source"
            ]
        }

        pmfx_dev(pmfx): {
            explicit: true
        }
    }
}