{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "cargo_build"
		},
		{
			"label": "pmbuild-debug",
			"command": "./hotline-data/pmbuild.cmd", // Could be any other shell command
			"args": ["win32"],
			"type": "shell"
		},
		{
			"label": "pmbuild-release",
			"command": "./hotline-data/pmbuild.cmd", // Could be any other shell command
			"args": ["win32-release"],
			"type": "shell"
		}
	]
}